<h1>All cocktails</h1>

<div class="fex-container">
  <% @cocktails.each do |cocktail| %>
  <dix class="flex-item">
    <ul style="list-style-type:none;">
      <li><%= cocktail.name %></li>
      <li><%= link_to 'Show', cocktail %></li>
      <li><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
    <% end %>
  </dix>
</div>

<%= link_to 'New Cocktail', new_cocktail_path %>



